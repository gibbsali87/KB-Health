# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Start.index

GET    /signup                                  Members.signup
GET    /login                                   Members.login
POST   /register                                Members.register
POST   /authenticate                            Members.authenticate
GET    /logout                                  Members.logout

GET /getmemberdetails                           Members.getMemberDetails

GET     /dashboard                              Dashboard.index
GET     /dashboard/deleteexerciselist/{id}      Dashboard.deleteexerciselist

POST    /dashboard/addexerciselist              Dashboard.addExerciselist

POST    /dashboard/addcommentlist               CommentDetails.addCommentlist

GET     /about                                  About.index
GET     /trainer                                Trainer.index
GET     /exerciselists/{id}                         ExerciseDetails.index
GET     /exerciselists/{id}/deleteexercise/{exerciseid}     ExerciseDetails.deleteExercise

POST    /exerciselists/{id}/addexercise                  ExerciseDetails.addExercise

GET /commentdetails    CommentDetails.index
GET /commentlists/{id}    CommentDetails.allComments
POST /commentlists/{id}/addcomment             CommentDetails.addComment
GET /commentlist/{id}/deletecomment/{commentid}         CommentDetails.deleteComment
GET /commentdetails/deletecommentlist/{id}     CommentDetails.deleteCommentlist

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}


